@model PMSMVC.Models.PatientLogin

@{
    ViewData["Title"] = "PatientLogin";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap.css">

    <link rel="stylesheet" href="~/vendor/owl-carousel/css/owl.carousel.css">

    <link rel="stylesheet" href="~/vendor/animate/animate.css">

    <link rel="stylesheet" href="~/css/theme.css">

</head>

<div class="page-hero bg-image overlay-dark" style="background-image: url(https://www.techzooz.org/wp-content/uploads/2022/02/Need-to-Know-About-Masters-in-Medical-Technology.jpg); " alt="">
    <br />

    <div class="row">
        <div class="container">
            <h4 style="color:white;"> Patient Login</h4>
            <br />
            <div class="col-md-4">
                <form asp-action="PatientLogin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label style="color:white;" asp-for="PatientName" class="control-label"></label>
                        <input asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:white;" asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <label style="color:white;">

                        @ViewData["message"]
                    </label>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" /> &nbsp;  &nbsp; <a class="btn btn-primary ml-lg-3" asp-action="Register" asp-controller="Patient">Register Here</a>
                    </div>

                </form>
            </div>

            <div>
                <a class="btn btn-primary ml-lg-3" asp-action="Index" asp-controller="Home">Back To Home</a>
            </div>

        </div>
    </div>
</div>


<footer class="page-footer">
    <div class="container-fluid ">
        <div class="container">
            <div class="row ">

                <div class="col-sm-6 col-lg-3 py-3">
                    <h5>More</h5>
                    <ul class="footer-menu">
                        <li><a href="#">Terms & Condition</a></li>
                        <li><a href="#">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-sm-6 col-lg-3 py-3">

                    <ul class="footer-menu">
                    </ul>
                </div>
                <div class="col-sm-6 col-lg-3 py-3">
                    <h5>Contact</h5>
                    <p class="footer-link mt-2">351 Willow Street Franklin, MA 02038</p>
                    <a href="#" class="footer-link">701-573-7582</a>
                    <a href="#" class="footer-link">healthcare@temporary.net</a>


                </div>
            </div>
        </div>
        <hr>


        <p id="copyright">Copyright &copy; 2022 <a href="#" target="_blank">PMS</a>. All right reserved</p>
    </div>
</footer>

<script src="~/js/jquery-3.5.1.min.js"></script>

<script src="~/js/bootstrap.bundle.min.js"></script>

