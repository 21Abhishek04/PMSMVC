@model IEnumerable<PMSMVC.Models.Appointment>

@{
    ViewData["Title"] = "SearchAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SearchAppointment</h1>
<br />
<center>
    @using (Html.BeginForm("SearchAppointment", "Patient", FormMethod.Get))
    {
        <span>Enter Patient Id:</span><input type="text" name="search" placeholder="Enter Patient Id" />
        <input type="submit" value="Search" name="submit" />
    }
</center>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultationFees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsultationFees)
                </td>

            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />
<br />
<li class="nav-item">
    <a class="btn btn-primary ml-lg-3" asp-action="PatientDashBoard" asp-controller="Patient">Dash board</a>
</li>